<a href="/records" class="button">Take me back!</a>
<h1> We want to find your listening history for the past month! </h1>
<%= form_with scope: :record, url: records_path, local: true do |f| %>
  <p>
  <%= f.label :username %>
  <%= f.text_field :username %>
  </p>

  <p>
    <%= f.select :months, [["7 days", "7day"], ["1 month", "1month"], ["3 month", "3month"], ["6 months", "6month"], ["One year", "12month"]] %>
  </p>

  <p>
    <%= f.select :data_type, [["Artists", "artists"], ["Albums", "albums"], ["Songs", "songs"]] %>
  </p>

  <p>
    <%= f.submit label: "hello"%>
  </p>
<% end %>
